
# Scale 200% for GTK apps (eg, Thunar), chrome too?
export GDK_SCALE=2
export GDK_DPI_SCALE=0.5

# Scale 200% for QT apps (eg, Dolphin, Krita)
export QT_AUTO_SCREEN_SET_FACTOR=0
export QT_SCALE_FACTOR=2
export QT_FONT_DPI=96

# Scale down to 175% (200 / 175 = ~1.14)
xrandr --output $(xrandr --query | grep " connected" | awk '{print $1}') --scale '1.14x1.14'


